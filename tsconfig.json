{
	"ts-node": {
		"files": true
	},
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"baseUrl": "./",
		"paths": {
			"@src/*": ["src/*"],
			"@test/*": ["src/__tests__/*"]
		},
		"rootDirs": ["./src"],
		"types": ["node", "ts-jest"],
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["src"]
}
